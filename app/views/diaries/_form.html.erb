      <%= f.text_field :training_menu_5 %> 
      重量  
      <%= f.text_field :weight_5 %>
      回数
      <%= f.text_field :times_5 %><br>

  </div>
 
  <div class="form-data-diary">
    <h3>【日記】</h3>
    <%= f.text_field :training_diary %><br>
  </div> 
  <div class="form-btn">  
    <%= f.submit "登録"%>
  </div>
   <% end %>
</div>
